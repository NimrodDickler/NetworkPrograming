void TcpSocketTest::run(){
	server = new TCPSocket(5678);
	TCPSocket* peer = server->listenAndAccept();
	char buff[1024];
	int rc = peer->recv(buff,sizeof(buff));
	buff[rc] = '\0';
	peer->send(buff);
	peer->close();
}
